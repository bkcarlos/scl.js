{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "./lib",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist/"]
}
